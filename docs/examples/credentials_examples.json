{
  "youtube_oauth_format": {
    "description": "YouTube credentials from OAuth flow",
    "example": {
      "token": "ya29.a0AfB_byD...",
      "refresh_token": "1//0gKxxx...",
      "token_uri": "https://oauth2.googleapis.com/token",
      "client_id": "475008846278-xxx.apps.googleusercontent.com",
      "client_secret": "GOCSPX-xxxxxxxx",
      "scopes": [
        "https://www.googleapis.com/auth/youtube.upload",
        "https://www.googleapis.com/auth/youtube",
        "https://www.googleapis.com/auth/youtube.force-ssl"
      ],
      "expiry": "2026-01-08T18:00:00Z"
    }
  },
  "youtube_manual_format": {
    "description": "YouTube credentials for manual API input",
    "endpoint": "POST /api/v1/credentials/",
    "example": {
      "platform": "youtube",
      "account_name": "my_youtube_channel",
      "credentials": {
        "token": {
          "token": "ya29.a0AfB_byD...",
          "refresh_token": "1//0gKxxx...",
          "token_uri": "https://oauth2.googleapis.com/token",
          "client_id": "475008846278-xxx.apps.googleusercontent.com",
          "client_secret": "GOCSPX-xxxxxxxx",
          "scopes": [
            "https://www.googleapis.com/auth/youtube.upload",
            "https://www.googleapis.com/auth/youtube"
          ],
          "expiry": "2026-01-08T18:00:00Z"
        }
      }
    }
  },
  "vk_oauth_format": {
    "description": "VK credentials from VK ID OAuth 2.1 flow (with refresh token)",
    "example": {
      "access_token": "vk1.a.xxx...",
      "refresh_token": "vk1.r.yyy...",
      "user_id": 123456,
      "expires_in": 86400,
      "expiry": "2026-01-09T16:00:00Z",
      "client_id": "54417027",
      "client_secret": "YOUR_VK_CLIENT_SECRET"
    }
  },
  "vk_implicit_flow_format": {
    "description": "VK credentials from Implicit Flow (no refresh token)",
    "example": {
      "access_token": "533bacf01e11f55b536a565b57531ac114461ae8736d6506a3",
      "user_id": 123456,
      "app_id": "54249533"
    }
  },
  "vk_service_token_format": {
    "description": "VK Service Token (long-lived, tied to app owner)",
    "example": {
      "access_token": "a25fc5cca25fc5cca25fc5cc80a161934faa25fa25fc5cccb005ca90921276b209fdb0e",
      "app_id": "54417027",
      "user_id": 123456
    }
  },
  "vk_manual_format": {
    "description": "VK credentials for manual API input (refresh token flow)",
    "endpoint": "POST /api/v1/credentials/",
    "note": "group_id and album_id should be in preset, not credentials",
    "example": {
      "platform": "vk_video",
      "account_name": "my_vk_account",
      "credentials": {
        "access_token": "vk1.a.xxx...",
        "refresh_token": "vk1.r.yyy...",
        "user_id": 123456,
        "expires_in": 86400,
        "expiry": "2026-01-09T16:00:00Z",
        "client_id": "54417027",
        "client_secret": "YOUR_VK_CLIENT_SECRET"
      }
    }
  },
  "vk_minimal_format": {
    "description": "VK credentials minimal format (Implicit Flow)",
    "endpoint": "POST /api/v1/credentials/",
    "example": {
      "platform": "vk_video",
      "account_name": "vk_implicit",
      "credentials": {
        "access_token": "533bacf01e11f55b536a565b57531ac114461ae8736d6506a3",
        "user_id": 123456
      }
    }
  },
  "zoom_format": {
    "description": "Zoom Server-to-Server OAuth credentials",
    "endpoint": "POST /api/v1/credentials/",
    "example": {
      "platform": "zoom",
      "account_name": "my_zoom_account",
      "credentials": {
        "account_id": "abc123def456",
        "client_id": "Xyz789Abc",
        "client_secret": "verylongsecretstring123456"
      }
    }
  },
  "validation_notes": {
    "youtube": {
      "required_fields": ["token", "client_id", "client_secret", "scopes"],
      "optional_fields": ["refresh_token", "expiry", "token_uri"],
      "notes": "refresh_token is required for long-term usage"
    },
    "vk_video": {
      "required_fields": ["access_token"],
      "optional_fields": [
        "refresh_token",
        "user_id",
        "expires_in",
        "expiry",
        "client_id",
        "client_secret",
        "group_id",
        "album_id"
      ],
      "notes": "user_id is highly recommended. refresh_token available only for VK ID OAuth."
    },
    "zoom": {
      "required_fields": ["account_id", "client_id", "client_secret"],
      "optional_fields": ["account"],
      "notes": "Server-to-Server OAuth only"
    }
  },
  "curl_examples": {
    "add_youtube_credentials": "curl -X POST 'http://localhost:8000/api/v1/credentials/' \\\n  -H 'Authorization: Bearer YOUR_TOKEN' \\\n  -H 'Content-Type: application/json' \\\n  -d '{\n    \"platform\": \"youtube\",\n    \"account_name\": \"my_channel\",\n    \"credentials\": {\n      \"token\": {\n        \"token\": \"ya29.xxx\",\n        \"refresh_token\": \"1//xxx\",\n        \"client_id\": \"xxx.apps.googleusercontent.com\",\n        \"client_secret\": \"GOCSPX-xxx\",\n        \"scopes\": [\"https://www.googleapis.com/auth/youtube.upload\"]\n      }\n    }\n  }'",
    "add_vk_credentials": "curl -X POST 'http://localhost:8000/api/v1/credentials/' \\\n  -H 'Authorization: Bearer YOUR_TOKEN' \\\n  -H 'Content-Type: application/json' \\\n  -d '{\n    \"platform\": \"vk_video\",\n    \"account_name\": \"my_vk\",\n    \"credentials\": {\n      \"access_token\": \"vk1.a.xxx\",\n      \"refresh_token\": \"vk1.r.xxx\",\n      \"user_id\": 123456\n    }\n  }'",
    "add_zoom_credentials": "curl -X POST 'http://localhost:8000/api/v1/credentials/' \\\n  -H 'Authorization: Bearer YOUR_TOKEN' \\\n  -H 'Content-Type: application/json' \\\n  -d '{\n    \"platform\": \"zoom\",\n    \"account_name\": \"my_zoom\",\n    \"credentials\": {\n      \"account_id\": \"abc123\",\n      \"client_id\": \"xyz789\",\n      \"client_secret\": \"secret123\"\n    }\n  }'"
  }
}

