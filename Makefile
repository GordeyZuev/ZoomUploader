	@echo "  make full-youtube   - –ü–æ–ª–Ω—ã–π –ø–∞–π–ø–ª–∞–π–Ω —Å YouTube"
	@echo "  make full-all       - –ü–æ–ª–Ω—ã–π –ø–∞–π–ø–ª–∞–π–Ω —Å–æ –≤—Å–µ–º–∏ –ø–ª–∞—Ç—Ñ–æ—Ä–º–∞–º–∏"
	@echo ""
	@echo "üßπ –û—á–∏—Å—Ç–∫–∞:"
